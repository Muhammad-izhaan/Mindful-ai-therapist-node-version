                        <div class="skill-item" data-aos="fade-up" data-aos-delay="200">
                            <i class="fab fa-react skill-icon"></i>
                            <p>React</p>
                        </div>
                        <div class="skill-item" data-aos="fade-up" data-aos-delay="300">
                            <i class="fas fa-database skill-icon"></i>
                            <p>MongoDB</p>
